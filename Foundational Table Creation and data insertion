-- Creating the ClassesOfService table
CREATE TABLE ClassesOfService (
  ClassOfServiceID INT IDENTITY(1,1) PRIMARY KEY,
  Description VARCHAR(255)
);
-- Inserting data into ClassesOfService table
INSERT INTO ClassesOfService (Description) VALUES
('Standard'),
('Express'),
('Premium');
 
 
CREATE TABLE LifeCycleEvents (
 
  LifeCycleID INT IDENTITY(1,1) PRIMARY KEY,
 
  Description VARCHAR(255)
 
);
-- Inserting data into LifeCycleEvents table
 
INSERT INTO LifeCycleEvents (Description) VALUES
 
('Received at Origin Location'),
 
('Loaded to Container'),
 
('Loaded on Transport'),
 
('En-route to Next Location'),
 
('Arrived Next Location'),
 
('Arrived at Destination Location'),
 
('Unloaded from Transport'),
 
('Unloaded from Container'),
 
('Picked up at Destination');
 
 
-- Creating the TransportationMode table
CREATE TABLE TransportationMode (
  TransportationModeID INT IDENTITY(1,1) PRIMARY KEY,
  Description VARCHAR(255)
);
-- Inserting data into TransportationMode table
INSERT INTO TransportationMode (Description) VALUES
('Ship'),
('Plane'),
('Truck'),
('Falcon'),
('Dragon');
 
 
CREATE TABLE Locations (
  LocationCode VARCHAR(10) PRIMARY KEY,
  LocationName VARCHAR(255),
  City VARCHAR(255),
  State VARCHAR(50),
  Country VARCHAR(50)
);
 
 
 
