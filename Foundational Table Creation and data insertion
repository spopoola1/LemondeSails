CREATE TABLE [Events] (
  [EventID] INT IDENTITY(1,1) PRIMARY KEY,
  [EventDescription] VARCHAR(255),
  [OccurrenceWeight] INT,
  [LocationCode] VARCHAR(10),
  [TransportMode] VARCHAR(15),
  FOREIGN KEY ([LocationCode]) REFERENCES [Locations]([LocationCode])
);
